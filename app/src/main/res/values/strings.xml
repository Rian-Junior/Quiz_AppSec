    <!-- Perguntas quizz -->
    <string name="P1">Qual é a principal função de um firewall?</string>
    <string name="P1_option_A">A) Proteger senhas</string>
    <string name="P1_option_B">B) Monitorar tráfego de rede</string>
    <string name="P1_option_C">C) Bloquear vírus</string>
    <string name="P1_option_D">D) Criptografar dados</string>
    <string name="P1_correct">B</string> <!-- correta -->

    <string name="P2">O que é phishing?</string>
    <string name="P2_option_A">A) Um software de segurança</string>
    <string name="P2_option_B">B) Um ataque para roubar informações pessoais</string>
    <string name="P2_option_C">C) Uma técnica de firewall</string>
    <string name="P2_option_D">D) Um tipo de malware</string>
    <string name="P2_correct">B</string> <!-- correta -->

    <string name="P3">Qual é a melhor prática para criar senhas seguras?</string>
    <string name="P3_option_A">A) Criar senhas curtas e simples</string>
    <string name="P3_option_B">B) Combinar letras, números e símbolos</string>
    <string name="P3_option_C">C) Usar a mesma senha para todas as contas</string>
    <string name="P3_option_D">D) Usar sua data de nascimento</string>
    <string name="P3_correct">B</string> <!-- correta -->

    <string name="P4">O que significa autenticação de dois fatores (2FA)?</string>
    <string name="P4_option_A">A) Alterar sua senha duas vezes ao mês</string>
    <string name="P4_option_B">B) Confirmar identidade através de dois métodos diferentes</string>
    <string name="P4_option_C">C) Usar apenas um dispositivo para login</string>
    <string name="P4_option_D">D) Usar duas senhas diferentes</string>
    <string name="P4_correct">B</string> <!-- correta -->

    <string name="P5">Qual dos seguintes é um sinal de que seu computador pode estar infectado por malware?</string>
    <string name="P5_option_A">A) Anúncios pop-up aparecem inesperadamente</string>
    <string name="P5_option_B">B) O computador está mais rápido</string>
    <string name="P5_option_C">C) Não há atualizações disponíveis</string>
    <string name="P5_option_D">D) Você consegue acessar todos os seus arquivos</string>
    <string name="P5_correct">A</string> <!-- correta -->

    <string name="P6">Qual é a finalidade de uma VPN?</string>
    <string name="P6_option_A">A) Aumentar o armazenamento de dados</string>
    <string name="P6_option_B">B) Proteger sua conexão de rede</string>
    <string name="P6_option_C">C) Criar senhas temporárias</string>
    <string name="P6_option_D">D) Melhorar a velocidade da internet</string>
    <string name="P6_correct">B</string> <!-- correta -->

    <string name="P7">O que deve ser feito ao receber um e-mail suspeito?</string>
    <string name="P7_option_A">A) Marcar como spam</string>
    <string name="P7_option_B">B) Responder solicitando mais informações</string>
    <string name="P7_option_C">C) Ignorar e deletar</string>
    <string name="P7_option_D">D) Abrir todos os anexos</string>
    <string name="P7_correct">C</string> <!-- correta -->

    <string name="P8">Qual é um exemplo de malware?</string>
    <string name="P8_option_A">A) Worm</string>
    <string name="P8_option_B">B) Antivírus</string>
    <string name="P8_option_C">C) Firewall</string>
    <string name="P8_option_D">D) VPN</string>
